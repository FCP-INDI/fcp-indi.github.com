{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sphinx Developer",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "pythonPath": "${config:python.pythonPath}",
            "debugStdLib": true,
            "args": [
                "-m", "sphinx",
                "docs/developer/_sources", "docs/developer"
            ]
        }
    ]
}